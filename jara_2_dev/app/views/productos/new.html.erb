<div class = "container">

<h1 align="center">Productos - Nuevo</h1>

<%= form_with scope: @dato, url: productos_crear_path do |f| %>
 <p>
 <label>Nombre</label> <br>
 <%= f.text_field :nombre, class: "form-control" %>
 </p>
 <p>
 <label>Cantidad Minima</label> <br>
 <%= f.number_field :cant_min, class: "form-control" %>
 </p>
 <p>
 <label>Cantidad actual</label> <br>
 <%= f.number_field :cant_act, class: "form-control" %>
 </p>
 <p>
 <label>precio</label> <br>
 <%= f.number_field :precio, class: "form-control" %>
 </p>
  <p>
 <label>activo</label>
 <%= f.check_box :activo %>
 </p>
  <p>
 <label>Rubro</label> <br>
 <%= f.collection_select(:rubro_id, @rubro.all, :id, :nombre, prompt: true, class: "dropdown-menu")%>
 </p>
   <p>
 <label>Marca</label> <br>
 <%= f.collection_select(:marca_id, @marca.all, :id, :nombre, prompt: true, class: "dropdown-menu")%>
 </p>
 <%= f.submit "Enviar", disable_with: 'Submiting...',class: "btn btn-primary" %>
<% end %>
<br>
<br>
</div>